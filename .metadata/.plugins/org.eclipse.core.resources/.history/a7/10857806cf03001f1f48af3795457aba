package com.uow.project.favorite;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;

import com.uow.project.list.Rent;
import com.uow.project.user.SiteUser;

public interface RentFavoriteRepository extends JpaRepository<RentFavorite, Long> {
	// 특정 사용자가 특정 렌트를 즐겨찾기에 추가했는지 확인
    boolean existsByRentAndUser(Rent rent, SiteUser user);
    // 특정 사용자가 즐겨찾기한 렌트 정보를 가져옴
    List<RentFavorite> findByUser(SiteUser user);
    // 특정 사용자가 특정 렌트를 즐겨찾기했는지 확인하고, 즐겨찾기 정보를 가져옴
    RentFavorite findByRentAndUser(Rent rent, SiteUser user);
}


