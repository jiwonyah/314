<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
	<head>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">	
	</head>
	<body>
		<div layout:fragment="content" class="container my-3">
			<table class="table">
				<thead class="table-dark">
					<tr class="text-center">
						<th>#</th>
						<th style="width:50%">Subject</th>
						<th>Author</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					<tr class="text-center" th:each="rent, loop : ${paging}">
						<td th:text="${paging.getTotalElements - (paging.number * paging.size) - loop.index}"></td>
						<td class="text-start">
							<a th:href="@{|/rent/detail/${rent.id}|}" th:text="${rent.subject}"></a>
							<span class="text-danger small ms-2" th:if="${#lists.size(rent.rentList) > 0}"
								th:text="${#lists.size(rent.answerList)}">
							</span>
						</td>
						<td><span th:if="${rent.author != null}" th:text="${rent.author.username}"></span></td>
						<td th:text="${#temporals.format(rent.createDate, 'yyyy-MM-dd HH:mm')}"></td>
					</tr>
				</tbody>
			</table>
			<!-- 페이징처리 시작 -->
			<div th:if="${!paging.isEmpty()}">
				<ul class="pagination justify-content-center">
					<li class="page-item" th:classappend="${!paging.hasPrevious} ? 'disabled'">
						<a class="page-link" th:href="@{|?page=${paging.number-1}|}">
							<span>previous</span>
						</a>
					</li>
					<li th:each="page: ${#numbers.sequence(0, paging.totalPages-1)}"
						th:if="${page >= paging.number-5 and page <= paging.number+5}"
						th:classappend="${page == paging.number} ? 'active'" class="page-item">
						<a th:text="${page}" class="page-link" th:href="@{|?page=${page}|}"></a>
					</li>
					<li class="page-item" th:classappend="${!paging.hasNext} ? 'disabled'">
						<a class="page-link" th:href="@{|?page=${paging.number+1}|}">
							<span>Next</span>
						</a>
					</li>
				</ul>
			</div>
		
		<!-- Display the rent registration button according to user permissions -->
		
		<div th:if="${isAdmin or isAgent or isSeller}">
		   <div class="form-container">
		       <a th:href="@{/rent/create}" class="btn">Register Post</a>
		   </div>
		</div>
	</body>
</html>

